{
  "manifest_version": 2,

  "name": "Snippit",
  "description": "Who cares...",
  "version": "1.0",

  "browser_action": {
    "default_icon": "./resources/icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "desktopCapture",
    "<all_urls>",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["js/background.js"]
  }
}
